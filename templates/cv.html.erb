<% if !data[:public] %>
<!doctype html>
<html lang="en">
<head>
  <link href="vendor/css/bootstrap.css" rel="stylesheet" type="text/css" media="screen" />
  <link href="vendor/css/cv.css" rel="stylesheet" type="text/css" media="screen" />
</head>
<body class="public">
  <div id="cv">
    <div id="name">
      <h1>John Bender<h1>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Contact Information
      </div>
      <div class="span5">
        <div id="street">
          <%= data[:address][:street] %>
        </div>
        <div id="other">
          <%= data[:address][:other] %>
        </div>
      </div>
      <div class="span5" id="contact">
        <div>
          phone: <%= data[:phone] %>
        </div>
        <div>
          email: <%= data[:email] %>
        </div>
      </div>
    </div>
<% else %>
---
layout: page
title : Curriculum Vitae
link : CV
header : Curriculum Vitae
group: navigation
width: 11
---
  <div id="cv">
<% end %>
    <div class="row-fluid">
      <div class="span2">
        Research Interests
      </div>
      <div class="span10">
        <%= data[:interests].join(", ") %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Education
      </div>
      <div class="span10">
        <div>
          <b><%= data[:ed][:where][:title] %></b>, <%= data[:ed][:where][:loc] %>
        </div>
        <div>
          <em><%= data[:ed][:what][:degree] %></em>, <%= data[:ed][:what][:major] %> <b class="right"><%= data[:ed][:when] %></b>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Professional Experience
      </div>
      <div class="span10">
        <% data[:work].each_with_index do |position, i| %>
        <div class="position">
          <div>
            <b><%= position[:where][:title] %></b>, <%= position[:where][:loc] %>
          </div>
          <div>
            <em><%= position[:what][:title] %></em><b class="right"><%= position[:when] %></b>
          </div>
          <% if data[:show_work_descriptions] %>
          <div>
            <%= position[:what][:description] %>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Publications
      </div>
      <div class="span10">
        <% data[:pubs].each_with_index do |pub, i| %>
        <div>
          <%= pub[:authors].join(", ") %>, "<%= pub[:title] %>", <em><%= pub[:where] %></em><%= pub[:when] ? ", " : "" %><%= pub[:when] %><%= pub[:url] ? ", " : "" %> <a href="<%= pub[:url] %>"><%= pub[:url] %></a>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Funding
      </div>
      <div class="span10">
        <% data[:funding].each_with_index do |funding, i| %>
        <div class="citation">
          <%= funding[:authors].join(", ") %>, "<%= funding[:title] %>",
          <em><%= funding[:where] %></em><%= funding[:when] ? ", " : "" %>
          <%= funding[:when] %><%= funding[:url] ? ", " : "" %>
          <a href="<%= funding[:url] %>"><%= funding[:url] %></a>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Teaching
      </div>
      <div class="span10">
        <% data[:teaching].each_with_index do |course, i| %>
        <div class="citation">
          <%= course[:when].join(", ") %>, <%= course[:course] %>, <em><%= course[:where] %></em>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Open Source
      </div>
      <div class="span10">
        <% data[:oss].select { |project| !project[:disabled] } .each_with_index do |project, i| %>
        <div class="position">
          <div>
            <b><%= project[:name] %></b>
          </div>
          <div>
            <em><%= project[:title] %></em><b class="right"><%= project[:when] %></b>
          </div>
          <div>
            <%= project[:description] %> <a class="right" href="<%= project[:url] %>"><%= project[:url] %></a>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Service
      </div>
      <div class="span10">
        <% data[:service].each_with_index do |serv, i| %>
        <div>
          <%= serv[:what] %>, <%= serv[:where] %>, <%= serv[:when] %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        Honors/Awards
      </div>
      <div class="span10">
        <% data[:awards].each_with_index do |award, i| %>
        <div>
          <%= award[:name] %>, <%= award[:who] %>, <%= award[:when] %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        References
      </div>
      <div class="span10">
        <em>available upon request</em>
      </div>
    </div>
  </div>
<% if !data[:public] %>
</body>
<% end %>
